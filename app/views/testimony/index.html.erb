
<div id="wrapper">
	<%= render "partials/navigation" %>
	<div id="testimony-wrapper">
		<div id="testimony-header">
			<h1 class="dg">Testimonials</h1>
		</div>
		<div id="testimony">
			<% @testimonials.each do |testimonial| %>
				<% @event = Event.find(testimonial.event_id) %>
				<div>
					<p class="thin">
						<span class="blue big"><%= @event.name %></span>
						<br/>
						<%= testimonial.quote %>
						<br/>
						<br/>
						<%= link_to "read testimonial", testimony_path(id: testimonial.id), class: "contact-navigation show-testimony" %>
					</p>
				</div>
			<% end %>
		</div>
		<div id="testimony-sm">
			<a href="http://www.pinterest.com/vowseventsdenvr/" target="_blank" class="no_bar">
				<span class="pint"></span>
			</a>
			<a href="https://twitter.com/VowsEventsDenvr" target="_blank" class="no_bar">
				<span class="fbook"></span>
			</a>
			<a href="https://www.facebook.com/vowsevents" class ="no_bar" target="_blank">
				<span class="twit"></span>
			</a>	
		</div>
	</div>
</div>
<div id="footer">
	<p class="thin blue">&copy; Vows Events, 2013</p>
</div>

